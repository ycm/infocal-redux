        id="TimeLabel"
        x="center"
        y="center"
        font="@Fonts.Monoton108"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
        color="#F7E6CA"
    />
    <label
        id="InfoLabel"
        x="center"
        y="50"
        font="Graphics.FONT_TINY"
